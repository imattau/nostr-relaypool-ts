{
  "name": "nostr-relaypool",
  "version": "0.6.30",
  "description": "A Nostr RelayPool implementation in TypeScript using only nostr-tools library as a dependency.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamritter/nostr-relaypool-ts.git"
  },
  "main": "lib/nostr-relaypool.cjs",
  "module": "lib/nostr-relaypool.esm.js",
  "exports": {
    "import": "./lib/nostr-relaypool.esm.js",
    "require": "./lib/nostr-relaypool.cjs"
  },
  "dependencies": {
    "isomorphic-ws": "^5.0.0",
    "nostr-tools": "^2.19.4",
    "safe-stable-stringify": "^2.5.0"
  },
  "keywords": [
    "decentralization",
    "social",
    "censorship-resistance",
    "client",
    "nostr"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@noble/hashes": "^2.0.1",
    "@noble/secp256k1": "^3.0.0",
    "@scure/base": "^2.0.0",
    "@scure/bip32": "^2.0.1",
    "@scure/bip39": "^2.0.1",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "esbuild": "0.27.2",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-babel": "^5.3.1",
    "esm-loader-import-relative-extension": "^1.0.11",
    "esm-loader-typescript": "^1.0.6",
    "events": "^3.3.0",
    "node-esm-loader": "^0.3.0",
    "node-fetch": "3.3.2",
    "prettier": "3.7.4",
    "ts-node": "^10.9.2",
    "tsd": "^0.33.0",
    "typescript": "^5.9.3",
    "ws": "^8.18.3"
  },
  "scripts": {
    "build": "node build.js",
    "build:watch": "node build.js --watch",
    "pretest": "node build.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest --watchAll",
    "dev": "node --experimental-loader=node-esm-loader/register --experimental-specifier-resolution=node dev.ts",
    "publish": "yarn install && npm run build && npm run test -- --testTimeout 5000 && npm publish",
    "type-check": "tsc"
  }
}
